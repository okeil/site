<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 product-vignette">
  <div class="picture">
    <a href="{% path_to product %}">
      <img src="{{ product.picture.url | resize: '300x300#' | default: 'http://placehold.it/300x300' }}" class="img-responsive" alt="{{ product.name }}">
    </a>
  </div>
  <h2><a href="{% path_to product %}">{{ product.name }}</a></h2>
  <p class="price">{{ product.price | money: unit: '$', format: "%u%n" }}</p>
</div>
